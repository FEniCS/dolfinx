#
# The contiuity equation for the incompressible 
# Navier-Stokes equations using cG(1)cG(1)
#
# Compile this form with FFC: ffc NSEContinuity.form.

name = "NSEContinuity"
scalar_element = FiniteElement("Lagrange", "triangle", 1)
vector_element = FiniteElement("Vector Lagrange", "triangle", 1)
scalar_element_const = FiniteElement("Discontinuous Lagrange", "triangle", 0)

q = BasisFunction(scalar_element)
p = BasisFunction(scalar_element)
uc = Function(vector_element)
f = Function(vector_element)

inv_uc_norm  = Function(scalar_element)      # 1/|w|
h = Function(scalar_element_const)           # element size
C1 = Constant()                              # stabilisation parameter

d1 = C1*0.5*h*inv_uc_norm                     # stabiliation term: FIXME: include timestep!!

i0 = Index()
i1 = Index()
i2 = Index()

a = d1*q.dx(i0)*p.dx(i0)*dx 
L = d1*q.dx(i0)*f[i0]*dx - d1*q.dx(i0)*uc[i1]*uc[i0].dx(i1)*dx - q*uc[i0].dx(i0)*dx 



