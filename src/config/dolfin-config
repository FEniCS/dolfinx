#!/bin/sh
# config-script for dolfin version 0.5.12

COMPILER="g++"
CFLAGS="-I/home/johanjan/usr/include -I../../src/kernel/common -I../../src/kernel/fem -I../../src/kernel/form -I../../src/kernel/function -I../../src/kernel/io -I../../src/kernel/la -I../../src/kernel/main -I../../src/kernel/math -I../../src/kernel/mesh -I../../src/kernel/nls -I../../src/kernel/ode -I../../src/kernel/quadrature -I../../src/kernel/parameter -I../../src/kernel/log -I/usr/local/lib/petsc/ -I/usr/local/lib/petsc//bmake/linux-gnu -I/usr/local/lib/petsc//include -I/usr/include/mpi -I/usr/include/libxml2 -I../../src/modules/elasticity -I../../src/modules/elasticity-updated -I../../src/modules/convdiff -I../../src/modules/navierstokes -I../../src/modules/poisson -I../../src/modules/stokes -I../../src/modules/heat -I../../src/kernel/common -I../../src/kernel/fem -I../../src/kernel/form -I../../src/kernel/function -I../../src/kernel/io -I../../src/kernel/la -I../../src/kernel/main -I../../src/kernel/math -I../../src/kernel/mesh -I../../src/kernel/nls -I../../src/kernel/ode -I../../src/kernel/quadrature -I../../src/kernel/parameter -I../../src/kernel/log -I/usr/local/lib/petsc/ -I/usr/local/lib/petsc//bmake/linux-gnu -I/usr/local/lib/petsc//include -I/usr/include/mpi -I/usr/include/libxml2 -I../../src/modules/"
LIBS="-L/home/johanjan/usr/lib -ldolfin -lncurses -Wl,-rpath,/usr/local/lib/petsc//lib/linux-gnu -Wl,-rpath,/usr/local/lib/petsc//lib/linux-gnu -L/usr/local/lib/petsc//lib/linux-gnu -lpetscts -lpetscsnes -lpetscksp -lpetscdm -lpetscmat -lpetscvec -lpetsc -Wl,-rpath,/usr/local/lib -L/usr/local/lib -lHYPRE_DistributedMatrix -lHYPRE_DistributedMatrixPilutSolver -lHYPRE_Euclid -lHYPRE_IJ_mv -lHYPRE_LSI -lHYPRE_MatrixMatrix -lHYPRE_ParaSails -lHYPRE_krylov -lHYPRE_lobpcg -lHYPRE_parcsr_ls -lHYPRE_parcsr_mv -lHYPRE_seq_mv -lHYPRE_sstruct_ls -lHYPRE_sstruct_mv -lHYPRE_struct_ls -lHYPRE_struct_mv -lstdc++ -lnsl -lrt -L/usr/X11R6/lib -lX11 -llapack -lblas -L/usr/lib/mpich/lib -lmpich -lg2c -lm -L/usr/lib/gcc/x86_64-linux-gnu/3.4.5 -L/usr/lib/gcc/x86_64-linux-gnu/3.4.5/../../../../lib -L/usr/lib/gcc/x86_64-linux-gnu/3.4.5/../../.. -L/lib/../lib -L/usr/lib/../lib -lm -lgcc_s -L/usr/lib/mpich/lib -L/usr/lib/gcc/x86_64-linux-gnu/4.0.2 -L/usr/lib/gcc/x86_64-linux-gnu/4.0.2/../../../../lib64 -L/usr/lib/gcc/x86_64-linux-gnu/4.0.2/../../.. -L/lib/../lib64 -L/usr/lib/../lib64 -lpmpich++ -lmpich -lstdc++ -lgcc_s -L/usr/lib -lxml2 -lz -lm"
SWIGCFLAGS="-I/usr/include/python2.4"
PACKAGE="dolfin"
VERSION="0.5.12"

usage()
{
   cat << EOF
Usage: dolfin-config [options]

       --version  (get version number)
       --cflags   (get compiler flags)
       --libs     (get libraries for linking)
       --compiler (get compiler)

       --swigcflags   (get compiler flags for SWIG)

EOF
   exit $1
}

if test $# -eq 0; then
        usage 1 1>&2
fi

case $1 in
	--version)
		echo $PACKAGE $VERSION
		;;
	--cflags)
      		echo $CFLAGS
      ;;
	--libs)
		echo $LIBS
      ;;
	--compiler)
		echo $COMPILER
      ;;
	--swigcflags)
		echo $SWIGCFLAGS
      ;;
	*)
      usage 1 1>&2
      ;;
esac
