#!/bin/sh
# config-script for dolfin version 0.5.12

COMPILER="g++"
CFLAGS="-I/home/johanjan/usr//include -I../../src/kernel/common -I../../src/kernel/fem -I../../src/kernel/form -I../../src/kernel/function -I../../src/kernel/io -I../../src/kernel/la -I../../src/kernel/main -I../../src/kernel/math -I../../src/kernel/mesh -I../../src/kernel/nls -I../../src/kernel/ode -I../../src/kernel/quadrature -I../../src/kernel/parameter -I../../src/kernel/log -I/home/johanjan/data/src/petsc-2.3.0 -I/home/johanjan/data/src/petsc-2.3.0/bmake/linux-gnu -I/home/johanjan/data/src/petsc-2.3.0/include -I/usr/include/mpi -I/usr/include/libxml2 -I../../src/modules/elasticity -I../../src/modules/elasticity-updated -I../../src/modules/convdiff -I../../src/modules/navierstokes -I../../src/modules/poisson -I../../src/modules/stokes -I../../src/modules/heat "
LIBS="-L/home/johanjan/usr//lib -ldolfin-elasticity -ldolfin-elasticity-updated -ldolfin-convdiff -ldolfin-navierstokes -ldolfin-poisson -ldolfin-stokes -ldolfin-heat -ldolfin-common -ldolfin-fem -ldolfin-form -ldolfin-function -ldolfin-io -ldolfin-la -ldolfin-main -ldolfin-math -ldolfin-mesh -ldolfin-nls -ldolfin-ode -ldolfin-quadrature -ldolfin-parameter -ldolfin-log -ldolfin-common -ldolfin-fem -ldolfin-form -ldolfin-function -ldolfin-io -ldolfin-la -ldolfin-main -ldolfin-math -ldolfin-mesh -ldolfin-nls -ldolfin-ode -ldolfin-quadrature -ldolfin-parameter -ldolfin-log -ldolfin-common -ldolfin-fem -ldolfin-form -ldolfin-function -ldolfin-io -ldolfin-la -ldolfin-main -ldolfin-math -ldolfin-mesh -ldolfin-nls -ldolfin-ode -ldolfin-quadrature -ldolfin-parameter -ldolfin-log -ldolfin-common -ldolfin-fem -ldolfin-form -ldolfin-function -ldolfin-io -ldolfin-la -ldolfin-main -ldolfin-math -ldolfin-mesh -ldolfin-nls -ldolfin-ode -ldolfin-quadrature -ldolfin-parameter -ldolfin-log -lncurses -Wl,-rpath,/home/johanjan/data/src/petsc-2.3.0/lib/linux-gnu -Wl,-rpath,/home/johanjan/data/src/petsc-2.3.0/lib/linux-gnu -L/home/johanjan/data/src/petsc-2.3.0/lib/linux-gnu -lpetscts -lpetscsnes -lpetscksp -lpetscdm -lpetscmat -lpetscvec -lpetsc -lnsl -lrt -L/usr/X11R6/lib -lX11 -llapack -lblas -L/usr/lib/mpich/lib -lmpich -lg2c -lm -L/usr/lib/gcc/x86_64-linux-gnu/3.4.5 -L/usr/lib/gcc/x86_64-linux-gnu/3.4.5/../../../../lib -L/usr/lib/gcc/x86_64-linux-gnu/3.4.5/../../.. -L/lib/../lib -L/usr/lib/../lib -lm -lgcc_s -L/usr/lib/mpich/lib -L/usr/lib/gcc/x86_64-linux-gnu/4.0.2 -L/usr/lib/gcc/x86_64-linux-gnu/4.0.2/../../../../lib64 -L/usr/lib/gcc/x86_64-linux-gnu/4.0.2/../../.. -L/lib/../lib64 -L/usr/lib/../lib64 -lpmpich++ -lmpich -lstdc++ -lgcc_s -L/usr/lib -lxml2 -lz -lm"
SWIGCFLAGS="-I/usr/include/python2.4"
PACKAGE="dolfin"
VERSION="0.5.12"

usage()
{
   cat << EOF
Usage: dolfin-config [options]

       --version  (get version number)
       --cflags   (get compiler flags)
       --libs     (get libraries for linking)
       --compiler (get compiler)

       --swigcflags   (get compiler flags for SWIG)

EOF
   exit $1
}

if test $# -eq 0; then
        usage 1 1>&2
fi

case $1 in
	--version)
		echo $PACKAGE $VERSION
		;;
	--cflags)
      		echo $CFLAGS
      ;;
	--libs)
		echo $LIBS
      ;;
	--compiler)
		echo $COMPILER
      ;;
	--swigcflags)
		echo $SWIGCFLAGS
      ;;
	*)
      usage 1 1>&2
      ;;
esac
