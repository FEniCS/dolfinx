# The bilinear form for a convection matrix

element = FiniteElement("Lagrange", "tetrahedron", 1)

v  = TestFunction(element)
U  = TrialFunction(element)
cx = Constant()
cy = Constant()
cz = Constant()

a = v*(cx*U.dx(0) + cy*U.dx(1) + cz*U.dx(2))*dx
